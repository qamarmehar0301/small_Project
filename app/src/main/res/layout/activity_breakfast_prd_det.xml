<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_backgorund">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/prd_det_img"
                android:layout_width="match_parent"
                android:layout_height="238dp"
                android:layout_gravity="center"
                android:layout_marginStart="0dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/breakfast" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/prd_det_Nlable"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center_horizontal"
                    android:text="Name: "
                    android:textColor="@color/black"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/prd_det_name"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center_horizontal"
                    android:text="Breakfast"
                    android:textColor="@color/white"
                    android:textSize="36sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/prd_det_Plable"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center_horizontal"
                    android:text="Price: "
                    android:textColor="@color/black"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/prd_det_price"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center_horizontal"
                    android:text="$15"
                    android:textColor="@color/white"
                    android:textSize="36sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/prd_det_Dlable"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center_horizontal"
                    android:text="Description: "
                    android:textColor="@color/black"
                    android:textSize="26sp" />

                <TextView
                    android:id="@+id/prd_det_des"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="30dp"

                    android:text="This is the description of the breakfast."
                    android:textColor="@color/white"
                    android:textSize="22sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center" >
                <Button
                    android:id="@+id/buyNow_btn"
                    android:layout_width="245dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:text="Buy Now"
                    android:textSize="25dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>